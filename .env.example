# ============================================================
# BankVoiceAI — Environment Configuration
# ALL SERVICES BELOW HAVE FREE TIERS (February 2026)
# ============================================================

# ── App ──────────────────────────────────────────────────────────
APP_ENV=development
APP_SECRET_KEY=change-me-to-random-64-char-string-use-python-secrets
APP_HOST=0.0.0.0
APP_PORT=8000
BANK_NAME=First Community Bank

# ── Fetch.ai / ASI:ONE ───────────────────────────────────────────
# FREE: Sign up at https://asi1.ai — 100K tokens/day free tier
ASI_ONE_API_KEY=your_asi_one_api_key_here
ASI_ONE_API_URL=https://api.asi1.ai/v1
ASI_ONE_MODEL=asi1-mini
# FREE: Unique seed for your agent identity on Fetch.ai network
FETCH_AGENT_SEED=bankvoiceai-your-unique-seed-phrase-here
FETCH_AGENT_PORT=8001

# ── Twilio (Voice + WhatsApp) ────────────────────────────────────
# FREE: $15 trial credit — sign up at https://twilio.com
# Trial number is free; paid number ~$1/month after trial
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=whatsapp:+1xxxxxxxxxx

# ── Tunnel (for webhook during development) ──────────────────────
# FREE: https://ngrok.com — free tier for development
# Run: ngrok http 8000  → copy the https URL below
TWILIO_WEBHOOK_BASE_URL=https://your-ngrok-id.ngrok-free.app
# In production, replace with your Railway/Render domain

# ── Database: PostgreSQL ─────────────────────────────────────────
# FREE: Supabase → https://supabase.com (500MB free, no credit card)
# OR: Railway → https://railway.app (5GB free, $5 credit/month)
# OR: Render → https://render.com (1GB free PostgreSQL)
# Format: postgresql+asyncpg://user:password@host:5432/dbname
DATABASE_URL=postgresql+asyncpg://bankvoiceai:password@localhost:5432/bankvoiceai
DB_PASSWORD=changeme

# ── Redis: Session Memory ────────────────────────────────────────
# FREE: Upstash Redis → https://upstash.com (10K commands/day free)
# Copy the "Redis URL" from Upstash dashboard:
REDIS_URL=redis://default:password@your-upstash-url.upstash.io:6379
REDIS_PASSWORD=changeme
SESSION_TTL_SECONDS=3600

# ── OpenAI (Whisper STT) ─────────────────────────────────────────
# FREE: $5 credit on signup — Whisper = $0.006/minute
# ~833 minutes free on $5 credit
OPENAI_API_KEY=sk-your_openai_api_key_here

# ── JWT Auth ─────────────────────────────────────────────────────
JWT_SECRET_KEY=change-me-jwt-secret-min-64-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ── Admin Dashboard ──────────────────────────────────────────────
ADMIN_DEFAULT_EMAIL=admin@yourbankvoiceai.com
ADMIN_DEFAULT_PASSWORD=ChangeMe123!

# ── Compliance (US Banking) ──────────────────────────────────────
CFPB_COMPLIANCE_MODE=true
TCPA_CONSENT_REQUIRED=true
FDCPA_MINI_MIRANDA=true
CALL_RECORDING_ENABLED=true
AUDIT_LOG_RETENTION_YEARS=7
HUMAN_AGENT_PHONE=+1xxxxxxxxxx

# ── Core Banking Integration (optional — demo works without) ─────
CORE_BANKING_API_URL=
CORE_BANKING_API_KEY=
DEMO_MODE=true

# ── Deployment ───────────────────────────────────────────────────
# FREE hosting options:
# → Railway.app (hobby: $5 credit/month, enough for small traffic)
# → Render.com (free 750 hrs/month on starter)
# → Fly.io (free tier: 256MB RAM, 3 shared VMs)
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=true
